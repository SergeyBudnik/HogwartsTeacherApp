<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/cabinet_label"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <View
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/gray_very_light"/>

            <com.hogwarts_eng_school.hogwarts_teacher.view.common.FontableTextView
                android:id="@+id/cabinet"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                app:app_font="regular"
                android:textSize="16sp"
                android:textColor="@color/primary_normal"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_very_light"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp">

        <View
            android:layout_width="1dp"
            android:layout_height="100dp"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp"
            android:background="@color/gray_very_light"/>

        <RelativeLayout
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginTop="13dp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                app:riv_corner_radius="22dp"
                android:src="@color/primary_normal"/>

            <com.hogwarts_eng_school.hogwarts_teacher.view.LoadableImageView_
                android:id="@+id/icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                app:riv_corner_radius="20dp"
                android:src="@color/gray_very_light"/>

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="60dp"
            android:layout_marginStart="60dp">

            <com.hogwarts_eng_school.hogwarts_teacher.view.common.FontableTextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center_vertical"
                app:app_font="bold"
                android:textColor="@color/gray_medium"
                android:textSize="18sp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_height="20dp">

                <ImageView
                    android:id="@+id/student_1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/no_student"
                    android:tint="@color/gray_medium"
                    android:contentDescription="@string/img_content"/>

                <ImageView
                    android:id="@+id/student_2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/no_student"
                    android:tint="@color/gray_medium"
                    android:contentDescription="@string/img_content"/>

                <ImageView
                    android:id="@+id/student_3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/no_student"
                    android:tint="@color/gray_medium"
                    android:contentDescription="@string/img_content"/>

                <ImageView
                    android:id="@+id/student_4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/no_student"
                    android:tint="@color/gray_medium"
                    android:contentDescription="@string/img_content"/>

                <ImageView
                    android:id="@+id/student_5"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/no_student"
                    android:tint="@color/gray_medium"
                    android:contentDescription="@string/img_content"/>

                <ImageView
                    android:id="@+id/student_6"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/no_student"
                    android:tint="@color/gray_medium"
                    android:contentDescription="@string/img_content"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>