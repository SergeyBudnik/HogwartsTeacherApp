<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <View
        android:layout_width="1dp"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:background="@color/gray_very_light"/>

    <com.hogwarts_eng_school.hogwarts_teacher.view.LoadableImageView_
        android:id="@+id/icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:riv_corner_radius="20dp"
        android:layout_marginTop="15dp"
        android:src="@color/gray_very_light"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp">

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:gravity="center_vertical"
            android:textColor="@color/gray_medium"
            android:textSize="18sp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_height="20dp">

            <ImageView
                android:id="@+id/student_1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/no_student"
                android:tint="@color/gray_medium"
                android:contentDescription="@string/img_content"/>

            <ImageView
                android:id="@+id/student_2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/no_student"
                android:tint="@color/gray_medium"
                android:contentDescription="@string/img_content"/>

            <ImageView
                android:id="@+id/student_3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/no_student"
                android:tint="@color/gray_medium"
                android:contentDescription="@string/img_content"/>

            <ImageView
                android:id="@+id/student_4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/no_student"
                android:tint="@color/gray_medium"
                android:contentDescription="@string/img_content"/>

            <ImageView
                android:id="@+id/student_5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/no_student"
                android:tint="@color/gray_medium"
                android:contentDescription="@string/img_content"/>

            <ImageView
                android:id="@+id/student_6"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/no_student"
                android:tint="@color/gray_medium"
                android:contentDescription="@string/img_content"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>